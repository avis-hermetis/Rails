<%= form_for(@train) do |f| %>
  <%= render 'common/errors', resource: @train %>

  <div class="field">
    <%= f.label :number, 'Номер' %><br>
    <%= f.text_field :number %>
  </div>

  <div class="field">
    <%= f.label :current_route, "Маршрут" %><br>
    <%= f.collection_select :current_route_id, Route.all, :id, :title %>
  </div>

  <div class="actions">
    <%= f.submit "#{@train.new_record? ? 'Создать' : 'Изменить'}" %>
  </div>
<% end %>
